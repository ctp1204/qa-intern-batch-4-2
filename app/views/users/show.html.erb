<% provide :title, @user.name %>
<aside class="col-md-8">
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to "Home", root_path %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to "All Users", users_path %>
      </li>
      <li class="breadcrumb-item active">
        Profile
      </li>
    </ol>
  </nav>
  <div class="row user-statistic highlight">
    <div class="col-md-1"></div>
    <div class="col-md-5 col-xs-12 user-info">
      <span class="picture-user">
        <%= image_tag @user.picture.url %>
      </span>
      <ul>
        <li class="name"><%= @user.name %></li>
        <span title="1529" class="user-badge" style="background-color:#780978;">
          Member
        </span>
        <li class="item"><i class="fa fa-envelope"></i> <%= @user.email %></li>
        <li class="item"><i class="fa fa-phone"></i> <%= @user.phone %></li>
        <li class="item"><i class="fa fa-map-marker"></i> <%= @user.address %></li>
      </ul>
    </div>
    <div class="col-md-6 col-xs-12 user-post-count">
      <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-6 statistics">
          <div class="pull-top question-cat">
            <li class="widget widget-statistic">
              <ul class="widget wiget-count">
                <li class="question-count">
                  <p>Questions</p>
                  <span><%= @user.questions.count %></span>
                </li>
                <li class="member-count">
                  <p>Answers</p>
                  <span><%= @user.answers.count %></span>
                </li>
              </ul>
            </li>
          </div>
        </div>
      </div>
    </div>
  </div>

<ul class="nav nav-tabs">
    <li class="nav-item">
      <a class="nav-link-question active" data-toggle="tab" href="#questions">Questions</a>
    </li>
    <li class="nav-item">
      <a class="nav-link-question" data-toggle="tab" href="#votes">Votes</a>
    </li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div id="questions" class="container tab-pane active"><br>
      <%= render @questions %>
    </div>
    <div id="votes" class="container tab-pane fade"><br>
    </div>
  </div>
</aside>
